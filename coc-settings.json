{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["typescript", "typescriptreact","javascript", "javascriptreact"]
}
